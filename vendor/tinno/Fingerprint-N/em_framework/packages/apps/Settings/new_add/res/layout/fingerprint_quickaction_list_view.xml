<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/finger_list_layout"    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/finger_list_margin_left"
    android:layout_marginRight="@dimen/finger_list_margin_right"
    android:orientation="vertical" 
    > 
    
  <View android:background="?android:attr/dividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height=".9dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />	     
    
         <ListView
             android:id="@+id/finger_list"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:descendantFocusability="blocksDescendants"
             android:fastScrollAlwaysVisible="false"
             android:scrollbars="none" >
         </ListView>       
</LinearLayout>
