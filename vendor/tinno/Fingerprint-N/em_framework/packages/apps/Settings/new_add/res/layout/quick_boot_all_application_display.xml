<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:gravity="center"    
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout1">

        <TextView
            android:id="@+id/apps_catalog"
            android:layout_width="72.0dp"
            android:layout_height="56.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="@string/finger_choice_create_finger"
            android:textColor="#238E68"
            android:textSize="22dp" />
    </LinearLayout>

<!--android:background="@drawable/ripple_bg"-->
<!--android:background="@drawable/quickapp_item_bg"-->
    
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="54.0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_marginLeft="1dip"
        android:layout_toRightOf="@id/linearLayout1"       
        >

        <ImageView
            android:id="@+id/apps_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:icon="@drawable/icon" />
        
        <TextView
            android:id="@+id/apps_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="11dip"
            android:ellipsize="marquee"
            android:textColor="#000000"
            android:maxLines="2" />
        </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true" 
        android:orientation="horizontal"         
        >
        <ImageView
            android:id="@+id/actions_expand"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"         
            android:icon="@drawable/quickboot_item_expand_more"/>             
   </LinearLayout>
        
</RelativeLayout>
