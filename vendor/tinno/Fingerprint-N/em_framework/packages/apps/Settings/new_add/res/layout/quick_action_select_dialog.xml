<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="8dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/quick_action_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/layout_left_margin_gap"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/quick_action_dialog_default_title"
        android:textColor="@color/style_dialog_title_text_color"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/quick_action_dialog_app_item_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quick_action_dialog_app_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/layout_left_margin_gap"
            android:clickable="false"
             android:visibility="gone"
            android:src="@drawable/quick_action_dialog_app_item_icon" />

        <TextView
            android:id="@+id/quick_action_dialog_app_item_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/quick_action_dialog_app_item_str"
            android:textColor="@color/style_dialog_item_text_color"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/style_dialog_item_text_size" />
    </LinearLayout>

    <!--
  <View android:background="?android:attr/dividerHorizontal"
        android:layout_width="fill_parent"
        android:layout_height=".9dp" />

    -->

    <LinearLayout
        android:id="@+id/quick_action_dialog_contact_item_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_white_bg"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quick_action_dialog_contact_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/layout_left_margin_gap"
            android:clickable="false"
             android:visibility="gone"
            android:src="@drawable/quick_action_dialog_contact_item_icon" />

        <TextView
            android:id="@+id/quick_action_dialog_contact_item_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/quick_action_dialog_contact_item_str"
            android:textColor="@color/style_dialog_item_text_color"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/style_dialog_item_text_size" />
    </LinearLayout>
    <!--
  <View android:background="?android:attr/dividerHorizontal"
        android:layout_width="fill_parent"
        android:layout_height=".9dp"/>	 

    -->

    <LinearLayout
        android:id="@+id/quick_action_dialog_unlock_item_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_white_bg"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quick_action_dialog_unlock_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/layout_left_margin_gap"
            android:clickable="false"
            android:visibility="gone"
            android:src="@drawable/unlock_icon" />

        <TextView
            android:id="@+id/quick_action_dialog_unlock_item_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:fontFamily="sans-serif"
            android:text="@string/quick_action_dialog_unlock_item_str"
            android:textColor="@color/style_dialog_item_text_color"
            android:textSize="@dimen/style_dialog_item_text_size" />
    </LinearLayout>

</LinearLayout>
