<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myos_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_password_title"
        android:textSize="12sp"
        android:paddingLeft="30dip"
        android:textColor="#626262"
        android:layout_marginTop="70dip"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="#1a000000" />

    <EditText
        android:id="@+id/question_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center|left"
        android:layout_marginLeft="-10dip"
        android:layout_marginRight="-5dip"
        android:layout_marginTop="0dip"
        android:paddingLeft="38dip"
        android:paddingBottom="0dip"
        android:textColor="#626262"
        android:textSize="15sp"
        android:textCursorDrawable="@null"
        android:background="@drawable/myos_white"
        android:singleLine="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="@drawable/listline"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:gravity="center|left"
        android:layout_marginLeft="-10dip"
        android:layout_marginRight="-5dip"
        android:layout_marginTop="0dip"
        android:paddingLeft="38dip"
        android:paddingBottom="10dip"
        android:hint="@string/question_password_hint_sub"
        android:maxLength="20"
        android:textColor="#2c2c2c"
        android:textColorHint="#d4d4d4"
        android:textSize="16sp"
        android:textCursorDrawable="@null"
        android:background="@drawable/myos_white"
        android:singleLine="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="#1a000000" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_marginTop="5dip"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_complete"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="72dip"
                android:layout_marginRight="72dip"
                android:layout_marginBottom="45dip"
                android:text="@string/complete"
                android:textSize="19sp"
                android:textColor="#d4000000"
                android:background="@drawable/applock_btn_submit_bg" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
